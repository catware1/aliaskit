## Config
export EDITOR="micro" # Select editor (export for fish support(??))
export VISUAL="${EDITOR}

# Package managers

## Debian ##
alias apt="sudo apt"

## ArchLinux ##
alias pacman="sudo pacman" # Use pacman
# alias pacman="paru" # Use paru (aur helper)
# alias pacman="pikaur" # Use pikaur (aur helper) 
# alias pacman="yay" # Use yay (aur helper)

## Gentoo ##
alias e="sudo emerge"

## Editors 
alias edit="${EDITOR}"
alias sedit="sudo ${EDITOR}"
alias vi="${EDITOR}"
alias svi="sudo ${EDITOR}"

## Editors with sudo aliases ##
alias smicro="sudo micro"
alias svim="sudo vim"
alias snvim="sudo nvim"
alias semacs="sudo emacs"

## Some utilities....
alias ls="exa"
alias la="ls -lah"
alias ll="ls -lh"

alias cat="bat --paging=never"
alias less="most"
alias more="less"

alias grep="rg"
alias ggrep="command grep"
alias bg="batgrep"

alias ps="procs"
alias gps="command ps"

alias ffind="fd"

alias pip="python -m pip" # python3?

alias htop="bpytop" # bashtop?
alias hhtop"command htop"

alias rm="rm -rf"
alias srm="sudo rm"
alias rrm="command rm"
alias rmd="rmdir"
alias rd="rmdir"

alias man="man --pager most"
